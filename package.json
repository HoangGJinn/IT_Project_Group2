{
  "name": "do-an-cntt",
  "version": "1.0.0",
  "description": "Hệ Thống Quản Lý Điểm Danh - Attendance Management System",
  "private": true,
  "scripts": {
    "prepare": "node -e \"try { if (!process.env.CI && !process.env.NODE_ENV && require('fs').existsSync('node_modules/husky')) require('husky').install() } catch(e) {}\"",
    "lint": "npm run lint --workspace=backend && npm run lint --workspace=frontend",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,json,md}\""
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0 <=22.0.0",
    "npm": ">=8.0.0"
  }
}
